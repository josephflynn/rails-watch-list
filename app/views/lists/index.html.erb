<% title = "<h1>Favourite Movies by Category</h1>" %>
<% poster = "https://img.freepik.com/premium-vector/set-watercolour-brush-samples-gradient-circles-with-pastel-color-palette-isolated_348818-536.jpg" %>
<%= render "/shared/banner", title: title, poster: poster %>
<div class="cards" id="lists">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.image.key, height: 300, crop: :fill %>')">
    <%= list.name %>
    </div>
  <% end %>
</div>

<%= link_to "New List", new_list_path %>
